<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="139dp"
        android:id="@+id/imageView"
        android:background="@drawable/survive_title_art"
        android:layout_gravity="left|top" />

    <TableLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SFX"
                android:id="@+id/textView"
                android:textColor="#9A0007" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_sfx"
                android:layout_column="1"
                android:max="100"
                android:indeterminate="false"
                android:progress="50"
                android:layout_weight="3"
                android:thumbTint="#9A0007"
                android:progressTint="#ff6659"
                android:layout_span="100" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUSIC"
                android:id="@+id/textView5"
                android:textColor="#9A0007" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_music"
                android:layout_column="1"
                android:max="100"
                android:indeterminate="false"
                android:progress="50"
                android:thumbTint="#9A0007"
                android:progressTint="#ff6659"
                android:layout_span="100"
                android:layout_weight="1" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/button_reset"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#9A0007"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREDITS"
        android:id="@+id/button_credits"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#9A0007"
        android:textColor="#ffffff"
        android:layout_margin="5dp" />

</LinearLayout>